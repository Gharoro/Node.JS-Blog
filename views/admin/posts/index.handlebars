<h1>ALL POSTS</h1>

<table class="table table-bordered">
    <thead class="card-header">
        <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Category</th>
            <th>Status</th>
            <th>Allow Comments</th>
            <th>Date</th>
            <th>View Post</th>
        </tr>
    </thead>

    <tbody>
        {{#each posts}}
        <tr>
            <td><img height="60" width="100" class="img-responsive" src="{{file}}" alt=""></td>
            <td>{{title}}</td>
            <td>{{category.name}}</td>
            <td>{{status}}</td>
            <td>{{allowComments}}</td>
            <td>{{generateDate date 'MMM Do YYYY'}}</td>
            <td><a href="/blogpost/{{slug}}" class="btn btn-primary">View</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>